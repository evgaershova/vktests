<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info">
  /
    <Appenders>
        <File name="File" fileName="target/logs/test-logs.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>